mkdir -p /usr/local/extra_bin/.bsh

rm local/extra_bin/.tmp/remove
rm local/extra_bin/.data/remove
rm local/extra_bin/.scrty/remove

mkdir /usr/local/extra_bin/.bsh/.tmp/a/
mkdir /usr/local/extra_bin/.bsh/.data/p/

mv .tmp /usr/local/extra_bin/.bsh/
mv .data /usr/local/extra_bin/.bsh/
mv .scrty /usr/local/extra_bin/.bsh/
mv bin/main.py /usr/local/extra_bin/.bsh/

echo "python3 /usr/local/extra_bin/.bsh/main.py" > /usr/bin/osh

ln -sf /usr/bin/bsh /bin/bsh

echo "One last step: "
echo "type: echo 'mypasswd' > .scrty/adminpass.txt"

echo "bsh successfully installed!"
echo -e "\nrun with bsh"
